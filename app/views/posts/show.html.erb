<p id="notice"><%= notice %></p>

<div class ="blog_container">
	<div class="blog_body">
		<p>
		  <b>Posted by:</b>
		  <%= @post.name %>
		</p>

		<p>
		  <b>Post Title:</b>
		  <%= @post.title %>
		</p>

		<p>
		  <b>Content:</b>
		  <%= @post.content %>
		</p>
	</div>

	<h2>Comments</h2>
	<%= render @post.comments %>
	<br>
	<h2>Add a comment:</h2>
	<%= render "comments/form" %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>



